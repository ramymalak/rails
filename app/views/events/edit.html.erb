
<div class="container">
    <div class="panel panel-warning col-sm-6 col-sm-offset-3 ">

    <h1 style='color:#8A6D3B;' >Edit Event</h1><br>
          <%= form_for :event , url: group_event_path(@group,@event) ,:method => :put do |f| %>
            <% if @event.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

                <ul>
                <% @event.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <h5><%= f.label :name  %></h5>
              <%= f.text_field :name ,:class=> "form-control" %>
            </div>
            <div class="form-group">
              <h5><%= f.label :place %></h5>
              <%= f.text_field :place ,:class=> "form-control" %>
            </div>
            <div class="form-group">
              <%= f.hidden_field :group_id %>
            </div>
            <div class="form-group">
              <h5><%= f.label :description %></h5>
              <%= f.text_area :description ,:class=> "form-control" %>
            </div>
            <div class="form-group">
              <h5><%= f.label :date %></h5>
              <%= f.datetime_select :date ,:class=> "form-control" %>
            </div>
            <div class="actions">
              <%= f.submit "Save Changes" ,:class=> 'col-sm-offset-4 btn btn-success'%>
            </div>
          <% end %>
  </div>
</div>

