<%= form_for(@user) do |f| %>


<% @countries = Country.all %>
<% @cities = City.all %>
<% @gender = [{"id"=>"Male", "name"=>"Male"}, {"id"=>"Female", "name"=>"Female"}] %>


 


  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
   <%= f.label :password %><br />

       <%= f.hidden_field :password , value: "nopass" %>
      <% if current_user.id.to_s == id %>
       <%= link_to 'Change password', chng_pass_path %></td>
      <% end %>


    

     




  </div>
  
  <div class="field">
    <%= f.label :age %><br>
    <%= f.number_field :age %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>

  
<%= f.select :gender, options_for_select(@gender.collect {|p| [ p['name'], p['id'] ] } , @user.gender )%>

  </div>
  <div class="field">
    <%= f.label :country_id %><br>
    <%= f.collection_select :country_id, @countries.order(:name),:id,:name, include_blank: true %>

  </div>
  <div class="field">
    <%= f.label :city_id %><br>
    <%= f.collection_select :city_id, @cities.order(:name),:id,:name, include_blank: true %>

  </div>





 <% if current_user && current_user.isAdmin %>
  <div class="field">
    <%= f.label :isAdmin %><br>
    <%= f.check_box :isAdmin %>
  </div>
  <div class="field">
    <%= f.label :isConf %><br>
    <%= f.check_box :isConf %>
  </div>
  <% end %>



<div class="field">
    <%= f.label :Profile_pic %><br>
  <%= f.file_field :avatar %>
  </div>
  

  <div class="actions">
    <%= f.submit %>
  </div>




<% end %>

