<p id="notice"><%= notice %></p>

<h1>Listing Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Hometown</th>
      <th>Description</th>
      <th>Group Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.hometown %></td>
        <td><%= group.description %></td>
        <td><%= User.find(group.user_id).username %></td>
        <td><%= link_to 'Show', group %></td>
        <td><%= link_to 'Edit', "/groups/#{group.id}/edit" %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

