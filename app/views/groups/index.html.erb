<p id="notice"><%= notice %></p>



<div class=" col-sm-10 col-sm-offset-1 ">
<h1 style='color:#8A6D3B;'><strong>Listing Groups</strong></h1>
  <div class="panel-body">
    <table class='table table-bordered  table-responsive table-striped ' >
      <thead>
        <tr>
          <th><h3 style='color:#8A6D3B;'><strong>Name</strong></h3></th>
          <th><h3 style='color:#8A6D3B;'><strong>Hometown</strong></h3></th>
          <th><h3 style='color:#8A6D3B;'><strong>Description</strong></h3></th>
          <th><h3 style='color:#8A6D3B;'><strong>Group Creator</strong></h3></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
      <% @groups.each do |group| %>
          <tr>
            <td><%= group.name %></td>
            <td><%= group.hometown %></td>
            <td><%= group.description %></td>
            <td><%= User.find(group.user_id).username %></td>
            <td><%= link_to 'Show', group ,:class=> 'btn btn-success' %></td>
            <%if session[:user_isAdmin] || session[:user_id]==group.user_id %>
                <td><%= link_to 'Edit', edit_group_path(group) ,:class=> 'btn btn-warning'%></td>
                <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } ,:class=> 'btn btn-danger'%></td>
            <% end %>
          </tr>
      <% end %>

      </tbody>
    </table>
</div>
</div>
<% if current_user %>
<div class="panel-heading "><h1><strong><%= link_to 'New Group', new_group_path ,:class=> 'btn btn-info col-sm-offset-5'%></strong></h1></div>
<%end%>
<br>

